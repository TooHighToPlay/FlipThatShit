html, body, .container {
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
}

body {
  overflow-y:hidden;
  background-image: url(<%= asset_path 'background.png' %>);
}

button, button:active {
  display: inline !important;
  background: #595959 !important;
}

button:hover {
  background: darken(#595959, 10%) !important;
}

button[disabled=disabled], button:disabled, button:disabled:hover {
  background: lighten(#595959, 10%) !important;
}

input {
  width: auto !important;
  margin-top: 10px !important;
}

.name-input.row {
  min-width: 400px !important;
  max-width: 400px !important;
  margin-left:auto !important;
  margin-right: auto !important;
  left: 0 !important;
  right: 0 !important;
  margin-top: 15px;
}

.highscore {
  bottom: 10px;
  right: 10px;
  position: absolute;

  img,h4 {
    display: inline;
  }

  img {
    cursor: pointer;
  }

  h4 {
    margin-top: 10px;
    vertical-align: middle;
    height: 100%;
  }
}

.highscores-title-container {
  background: #67c3c8;
  .highscores-title {
    color: white;
    text-align: center;
    padding: 20px;
    font-weight: bold;
  }
}

.highscores-container {

  background-image: url(<%= asset_path('taure.png') %>);
  backround-position:center;
  background-repeat: no-repeat; 
  -webkit-background-size: contain;
  -moz-background-size: contain;
  -o-background-size: contain;
  background-size: contain;

  .highscores {
    width: 100%;
    height: 100%;
    padding: 20px;
    padding-left: 40px;
    background-color: rgba(93, 170, 175, 0.95);

    .highscore-list {
      .highscore-entry {
        color: white;
        padding: 3px;
        font-size: 24px;
      }
    }
  }
}

.row {min-width:100% !important;}
.full-page{height:100% !important;}
.game-container{text-align:center;display:table;}
.game-content {
  display:table-cell; 
  vertical-align:middle;
}
<div class="row full-page">
  <div class="small-12 medium-8 large-9 columns full-page game-container">
    <div class="game-content">
      <h1>Toss a coin</h1>
      <h2>Double your score with each consecutive win!</h2>
      <div id="coin">
          <figure class="front"></figure>
          <figure class="back"></figure>
      </div>
      <div data-ng-hide="data.fillingName">
        <h3>Score: {{ data.score }}</h3>
        <button class="large radius" data-ng-disabled="data.busy" data-ng-click="spin()">SPIN IT!</button>
      </div>
      <div data-ng-show="data.fillingName === true" class="name-input row">
        <input class="small-6 columns" type="text" placeholder="Enter your name" ng-model="data.name" maxlength="20"></input>
        <button class="small-6 columns radius" data-ng-click="saveName(data.name)" data-ng-disabled="data.name == null || data.name == ''">Enter</button>
      </div>
      <div class="highscore" data-ng-show="data.highscore > 0">
        <h4>Highscore: {{ data.highscore }}</h4>
        <img src="facebook-logo.png" data-ng-click="shareFacebook()" />
        <!-- <img src="twitter-logo.png" /> -->
      </div>
    </div>
  </div>
  <div class="medium-4 large-3 columns full-page">
    <div class="row highscores-title-container">
      <h3 class="highscores-title">HIGHSCORES</h3>
    </div>
    <div class="row full-page highscores-container">
      <div class="highscores">
        <ol class="highscore-list">
          <li class="highscore-entry" data-ng-repeat="highscore in data.highscores">{{highscore.name}} ({{highscore.score}})</li>
        </ol>
      </div>
    </div>
  </div>
</div>